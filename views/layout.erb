<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
    <meta charset='utf-8'>
    <link rel='stylesheet' href='styles.css'>
  </head>
  <body>
    <% if current_user %>
      <p>Welcome, <%= current_user.username %></p>
      <form id='log-out' method="post" action="/sessions">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Log out">
      </form>
    <% end %>
    <% if flash[:notice] %>
      <section id="notice">
        <%= flash[:notice] %>
      </section>
    <% end %>
    <% if flash[:errors] %>
      <p>Oops, something went wrong: </p>
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>